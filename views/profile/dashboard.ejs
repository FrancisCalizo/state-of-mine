<body class="dashboard-body">

  <div id="myNavbar" class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
            <a href="/" class="navbar-brand">Home</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <form action="/logout" method="POST">
              <button type="submit">Logout</button>
            </form>
          </ul>
        </div>
      </div>
    </div>  

  <div class="container welcome">
    <h1>
      Welcome <span><em><%= user.username%></em></span>! Got any states in mind?
    </h1>
    <!-- Map Chart goes Here -->
    <div id="chartdiv" class="wow fadeIn"></div>
  </div>
  <hr>
  <!-- List the Reviews here -->
  <div class="container">
    <div class="row match-my-cols reviews-row">
      <h1>My Reviews</h1>
      <% reviews.forEach((review) => { %>
        <div class="col-md-4 wow fadeIn" data-wow-delay="0.4s">
          <ul>
            <li>
              <div class="single-review" data-toggle="modal" data-target="#myModal">
                <div class="single-review-text">
                  <strong>Place:</strong> <%= review.name %><br>  
                  <strong>City:</strong>  <%= review.city %><br> 
                  <strong>State:</strong> <%= review.state %><br>
                  <!-- <strong>Image:</strong> <img src="<%= review.picturePath %>" style="width:200px"><br> -->
                  <strong>Comments:</strong> <%= review.comments %><br>
                  <strong>Rating:</strong> <%= review.rating %><br>
                  <div class="review-btns">
                    <form action="/<%= review._id %>/edit-review" method="GET">
                      <button type="submit">Edit Review</button>
                    </form>
                    <form action="/<%= review._id %>/delete" method="POST">
                      <button type="submit">Delete Review</button>
                    </form>
                  </div>
                </div>                
              </div>
            </li>
          </ul>
        </div>
      <% }) %>
    </div>
  </div>
  <div class="btn-div">
    <a href="/new" class="add-review">Add New Review</a>
  </div>

  <!-- Modal -->
  <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
  
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Modal Header</h4>
        </div>
        <div class="modal-body">
          <p>Some text in the modal.</p>
          <% reviews.forEach((review) => { %>
            <img src="<%= review.picturePath %>" style="width:200px; >
            <% }) %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
  
    </div>
  </div>
</body>

